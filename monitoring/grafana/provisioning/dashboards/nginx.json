{
  "title": "Nginx Metrics",
  "uid": "nginx-metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "expr": "nginx_connections_active", "legendFormat": "Active", "datasource": "Prometheus" },
        { "expr": "nginx_connections_waiting", "legendFormat": "Waiting", "datasource": "Prometheus" },
        { "expr": "nginx_connections_reading", "legendFormat": "Reading", "datasource": "Prometheus" },
        { "expr": "nginx_connections_writing", "legendFormat": "Writing", "datasource": "Prometheus" }
      ],
      "fieldConfig": { "defaults": {} }
    },
    {
      "id": 2,
      "title": "Requests per second",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [{
        "expr": "rate(nginx_http_requests_total[1m])",
        "legendFormat": "RPS",
        "datasource": "Prometheus"
      }],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "id": 3,
      "title": "Dropped Connections (accepted - handled)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "targets": [{
        "expr": "rate(nginx_connections_accepted_total[1m]) - rate(nginx_connections_handled_total[1m])",
        "legendFormat": "Dropped/s",
        "datasource": "Prometheus"
      }],
      "fieldConfig": { "defaults": {} }
    }
  ]
}